body /*Все страницы сайта*/
{
background-image: url(photo/menu.jpg); /* Путь к графическому файлу */
background-color:#f8f8f8; /* Цвет фона */
background-repeat: no-repeat; /* фон будет повторятся по оси-х (горизонтали) */
background-size: cover;
}


#footer /*Подвал*/
{
position: fixed; /* Фиксированное положение */
left: 0; bottom: 0; /* Левый нижний угол */
padding: 10px; /* Поля вокруг текста */
background: #985673; /* Цвет фона */
color: #000; /* Цвет текста */
width: 100%; /* Ширина слоя */
opacity: 0.85; /* Полупрозрачный фон */
filter: alpha(Opacity=85); /* Прозрачность в IE */
height: 20px;
text-indent: 1300px;
}


a /*Цвет текста и подчеркивание*/
{
text-decoration: none; 
color: azure;
}


a:hover /*При наведении на кнопку*/
{
color: antiquewhite;
background-color: brown;
}


ul /*Нет маркированного списка меню*/
{
list-style-type: none;
}


.menu li a /*Цвет списка меню*/
{
color: black;
}


hr /*Линия после меню*/
{
border: none;
background-color: cadetblue;
color: black;
height: 5px;
}


h1 /*Заголовки страниц*/
{
color: black;
text-align: center;
font-size: 35px;
font-style: italic;
}


h2 /*Второй заголовок страниц*/
{
background-color: beige;
color: black;
text-align: left;
font-size: 18px;
font-style: italic; 
font-weight: 400;
}


img /*Картинки всех страниц*/
{
border: 10px solid #fff;
height: 350px;
list-style-position: outside;
list-style-position: inside;
}


img:hover /*Картинка при наведении*/
{
border:none;
padding: 3px!important;
}


.r1
{
height: 45px;
width: 45px;  
border: none;
}


p1 /*Первый стиль абзацев*/
{
color: #202020;
font-size: 18px;
font-style: italic;
line-height: 16px;
}


p2 /*Второй стиль абзацев*/
{
color: #202020;
font-size: 18px;
font-weight: 400;
line-height: 24px;
text-align: left;
}


p
{
font-size: 20px;
font-style: italic;
}


p:first-letter /*Первая буква абзаца*/
{
font-size: 26px;
font-weight:bold;
color: darkviolet;
}

ul1 /*Маркированный список в списке характеристик товаров*/
{
list-style-image: url(photo/111.png);
}

form
{
background-color: lightgrey;
}


input[type=text] /*Поля заполнения текстовым типом*/
{
width: 300px;
height: 25px;
font-size: 20px;
background-color: lightcyan;
color: indigo;
text-transform: capitalize; /*ввод только с большой буквы*/
}


input[type=number] /*Поля заполнения числовым типом*/
{
width: 300px;
height: 25px;
font-size: 20px;
background-color: lightcyan;
color: indigo;   
}


input[type=email] /*Поля заполнения почты*/
{
width: 300px;
height: 25px; 
font-size: 20px;
background-color: lightcyan;
color: indigo;    
}


ul2 {list-style-position: inside;} /*Размещение меню горизонтально*/
li2 {list-style-position: outside;}


.border /*Оформление меню*/
{
margin-top: -30px;
float: right;
list-style: none;
padding: 0;
}


.border li2 { /*Оформление меню*/
font-family: "Trebuchet MS", "Lucida Sans";
padding: 7px 20px;
margin-bottom: 10px;
border-radius: 5px;
border-left: 10px solid #f05d22; 
box-shadow: 2px -2px 5px 0 rgba(0,0,0,.1),
           -2px -2px 5px 0 rgba(0,0,0,.1),
            2px 2px 5px 0 rgba(0,0,0,.1),
           -2px 2px 5px 0 rgba(0,0,0,.1);
font-size: 20px;
letter-spacing: 2px;
transition: 0.3s all linear;
display: inline-block
}
.border li2:first-child {border-color: #8bc63e;}
.border li2:nth-child(3){border-color: #fcba30;}
.border li2:nth-child(4){border-color: #1ccfc9;}
.border li2:hover {border-left: 10px solid transparent;}
.border li2:nth-child(1):hover {border-right: 10px solid #f05d22;}
.border li2:nth-child(2):hover {border-right: 10px solid #8bc63e;}
.border li2:nth-child(3):hover {border-right: 10px solid #fcba30;}


#cross
{ /*Логотип*/
float: left;
margin-top: -35px;
right: -176px;
width: inherit;
width: 150px;
height: 70px;
border: 0px;
}


.semiopacity /*Контейнер, только под другим именем*/
{ /*Полоса меню*/
padding: 50px; /* Поля вокруг текста */
background: url(photo/fon.jpg);
/*opacity: 0.7; /* Полупрозрачный фон */*/
/*filter: alpha(Opacity=70); /* Прозрачность в IE */*/
color: #fff; /* Цвет текста */
}


table /* внешние границы таблицы серого цвета толщиной 1px */
{
border: 1px solid pink;
background-color: cornsilk;
} 


th /* границы ячеек первого ряда таблицы */
{
border: 1px solid grey;
}


td /* границы ячеек тела таблицы */
{
border: 1px solid grey;
}


a.green
{
border-radius: 4px;
color: #fff;
display:block;
width:100px;
text-align: center;
font-family: Arial, Helvetica, sans-serif;
font-size: 14px;
padding: 8px 16px;
margin: 20px auto;
text-decoration: none;
text-shadow: 0 1px 1px rgba(0, 0, 0, 0.075);
-webkit-transition: background-color 0.1s linear;
-moz-transition: background-color 0.1s linear;
-o-transition: background-color 0.1s linear;
transition: background-color 0.1s linear;        
}
a.green {
background-color: rgb( 43, 153, 91 );
border: 1px solid rgb( 33, 126, 74 );
}
        
a.green:hover {
background-color: rgb( 75, 183, 141 );
}